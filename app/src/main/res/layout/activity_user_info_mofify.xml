<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="@drawable/ic_action_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/layout_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:src="@drawable/avata_default" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_title_size"
            android:layout_toRightOf="@id/imgAvatar"
            android:layout_marginTop="20dp"
            android:textColor="@color/color_text_gray"/>
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_sub_info_size"
            android:layout_toRightOf="@id/imgAvatar"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="3dp"
            android:textColor="@color/color_text_gray"/>
        <TextView
            android:id="@+id/tv_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_sub_info_size"
            android:layout_toRightOf="@id/imgAvatar"
            android:layout_below="@id/tv_email"
            android:layout_marginTop="3dp"
            android:textColor="@color/color_text_gray"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/layout_general"
        android:background="@color/color_white">
        <com.ziperp.dms.common.model.EditView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="75dp"
            app:title="@string/str_phone_number1"
            app:hint="@string/str_phone_number1"
            />
        <com.ziperp.dms.common.model.EditView
            android:id="@+id/idNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="75dp"
            app:title="@string/str_id_no"
            app:hint="@string/str_id_no"
            app:isEnable="false"
            />
        <com.ziperp.dms.common.model.EditView
            android:id="@+id/userBirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="75dp"
            app:isDateTimePicker="true"
            app:title="@string/str_birthday"
            app:hint="@string/str_birthday"
            />
        <com.ziperp.dms.common.model.EditView
            android:id="@+id/userGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="75dp"
            app:isMandatory="true"
            app:title="@string/str_gender"
            app:hint="@string/str_gender"
            />
        <com.ziperp.dms.common.model.EditView
            android:id="@+id/marriageStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="75dp"
            app:title="@string/str_marriage_status"
            app:hint="@string/str_marriage_status"
            />
        <com.ziperp.dms.common.model.EditView
            android:id="@+id/blood_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="75dp"
            app:title="@string/str_blood_type"
            app:hint="@string/str_blood_type"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_address"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/text_title_size"
            android:textColor="@color/color_black"
            android:layout_marginVertical="5dp"/>

        <EditText
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:gravity="start"
            android:background="@drawable/bg_radius_border"
            android:textSize="@dimen/text_title_size"
            android:textColor="@color/color_black"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="20dp"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="20dp"
            android:imeOptions="actionDone"/>
    </LinearLayout>
</RelativeLayout>