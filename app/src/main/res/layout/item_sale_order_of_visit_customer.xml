<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_edt_round10"
    android:paddingBottom="15dp"
    android:layout_marginBottom="5dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_ver_parent_0.65"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <TextView
        android:id="@+id/tv_saleOrderName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_black"
        android:text="HN_ĐH20_3945 - 09/06/2020"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/line_ver_parent_0.65"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textSize="@dimen/text_title_size"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"/>
    
    <TextView
        android:id="@+id/tv_saleOrderPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_standard_size"
        app:layout_constraintBottom_toBottomOf="@+id/tv_saleOrderName"
        app:layout_constraintStart_toStartOf="@+id/line_ver_parent_0.65"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="right"
        android:text="12,560,000 VND"
        android:textColor="@color/color_black"
        android:textStyle="bold"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"/>
    
    <ImageView
        android:id="@+id/img_vcLocation"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_saleOrderName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_orange_1"
        android:layout_marginStart="5dp"
        android:src="@drawable/icon_vc_bag"
        android:padding="3dp"
        />

    <TextView
        android:id="@+id/tv_customer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/img_vcLocation"
        app:layout_constraintEnd_toStartOf="@+id/line_ver_parent_0.65"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_standard_size"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Phòng khám Thanh Liêm - Nhà thuốc Ngọc Bích"
        app:layout_constraintTop_toTopOf="@+id/img_vcLocation"
        app:layout_constraintBottom_toBottomOf="@+id/img_vcLocation"/>

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@+id/img_vcLocation"
        app:layout_constraintBottom_toBottomOf="@+id/img_vcLocation"
        android:background="@drawable/bg_vc_opening_state"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="end"
        android:text="@string/str_opening"
        android:textColor="#FF9052"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"/>


    <ImageView
        android:id="@+id/img_vcNote"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_customer_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_red"
        android:layout_marginStart="5dp"
        android:src="@drawable/icon_vc_note"
        android:padding="3dp"
        />

    <TextView
        android:id="@+id/tv_noteContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/img_vcLocation"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_standard_size"
        android:text="Khách đã đặt cọc 2 triệu, giao hàng ngoài giờ làm việc"
        app:layout_constraintTop_toTopOf="@+id/img_vcNote"
        app:layout_constraintBottom_toBottomOf="@+id/img_vcNote"/>

</androidx.constraintlayout.widget.ConstraintLayout>