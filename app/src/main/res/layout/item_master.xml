<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/bg_edt_round10"
    android:padding="7dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.30" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_75"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkbox"
        android:layout_width="30dp"
        android:layout_height="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:buttonTint="@color/colorPrimary"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNameItemMaster"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_title_size"
        android:text="ANTS - Doppelherz Aktiv Anti Stress"
        android:textColor="@color/color_black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/checkbox"/>

    <TextView
        android:id="@+id/tv_vendor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_vendor"
        android:textSize="@dimen/text_sub_info_size"
        android:textColor="@color/color_text_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNameItemMaster"
        />
    <TextView
        android:id="@+id/tv_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_item_category"
        android:textSize="@dimen/text_sub_info_size"
        android:textColor="@color/color_text_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_vendor"
        />
    <TextView
        android:id="@+id/tv_stock_unit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_stock_unit"
        android:textSize="@dimen/text_sub_info_size"
        android:textColor="@color/color_text_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_category"
        />
    <TextView
        android:id="@+id/tv_sale_unit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_sale_unit"
        android:textSize="@dimen/text_sub_info_size"
        android:textColor="@color/color_text_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_stock_unit"
        />
    <TextView
        android:id="@+id/tv_sale_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_sales_std_price"
        android:textSize="@dimen/text_sub_info_size"
        android:textColor="@color/color_text_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sale_unit"
        />
    <TextView
        android:id="@+id/tv_spec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_item_spec"
        android:textSize="@dimen/text_sub_info_size"
        android:textColor="@color/color_text_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sale_price"
        />

    <TextView
        android:id="@+id/tv_vendorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_sub_info_size"
        android:textColor="@color/color_text_gray"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/line_30"
        app:layout_constraintTop_toBottomOf="@id/tvNameItemMaster"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tv_itemCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_sub_info_size"
        android:textColor="@color/color_text_gray"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/line_30"
        app:layout_constraintTop_toBottomOf="@id/tv_vendorName"
        app:layout_constraintRight_toLeftOf="@id/line_50"
        />
    <TextView
        android:id="@+id/tv_stockUnit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_sub_info_size"
        android:textColor="@color/color_text_gray"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/line_30"
        app:layout_constraintTop_toBottomOf="@id/tv_itemCategory"
        app:layout_constraintRight_toLeftOf="@id/line_50"
        />
    <TextView
        android:id="@+id/tv_salesUnit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_sub_info_size"
        android:textColor="@color/color_text_gray"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/line_30"
        app:layout_constraintTop_toBottomOf="@id/tv_stockUnit"
        app:layout_constraintRight_toLeftOf="@id/line_50"
        />
    <TextView
        android:id="@+id/tv_salesPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_sub_info_size"
        android:textColor="@color/color_text_gray"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/line_30"
        app:layout_constraintTop_toBottomOf="@id/tv_salesUnit"
        app:layout_constraintRight_toLeftOf="@id/line_50"
        />
    <TextView
        android:id="@+id/tv_itemSpec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_sub_info_size"
        android:textColor="@color/color_text_gray"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/line_30"
        app:layout_constraintTop_toBottomOf="@id/tv_salesPrice"
        app:layout_constraintRight_toLeftOf="@id/btn_StockQty"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/tv_brand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_item_brand"
        android:textSize="@dimen/text_sub_info_size"
        android:textColor="@color/color_text_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/line_50"
        app:layout_constraintTop_toBottomOf="@id/tv_vendorName"
        />
    <TextView
        android:id="@+id/tv_origin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_origin"
        android:textSize="@dimen/text_sub_info_size"
        android:textColor="@color/color_text_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/line_50"
        app:layout_constraintTop_toBottomOf="@id/tv_brand"
        />
    <TextView
        android:id="@+id/tv_conv_qty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_convolution_quality"
        android:textSize="@dimen/text_sub_info_size"
        android:textColor="@color/color_text_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/line_50"
        app:layout_constraintTop_toBottomOf="@id/tv_origin"
        />
    <TextView
        android:id="@+id/tv_vat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_vat"
        android:textSize="@dimen/text_sub_info_size"
        android:textColor="@color/color_text_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/line_50"
        app:layout_constraintTop_toBottomOf="@id/tv_conv_qty"
        />
    <TextView
        android:id="@+id/tv_itemBrand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_sub_info_size"
        android:textColor="@color/color_text_gray"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/line_75"
        app:layout_constraintTop_toBottomOf="@id/tv_vendorName"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tv_originCountry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_sub_info_size"
        android:textColor="@color/color_text_gray"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/line_75"
        app:layout_constraintTop_toBottomOf="@id/tv_itemBrand"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tv_convQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_sub_info_size"
        android:textColor="@color/color_text_gray"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/line_75"
        app:layout_constraintTop_toBottomOf="@id/tv_originCountry"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tv_vatRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_sub_info_size"
        android:textColor="@color/color_text_gray"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/line_75"
        app:layout_constraintTop_toBottomOf="@id/tv_convQuantity"
        app:layout_constraintRight_toRightOf="parent"
        />


    <Button
        android:id="@+id/btn_StockQty"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@drawable/round_corner_rectangle"
        android:backgroundTint="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_home_24"
        android:paddingStart="5dp"
        android:paddingLeft="4dp"
        android:paddingEnd="5dp"
        android:paddingRight="4dp"
        android:text="@string/str_stk_qty"
        android:textAllCaps="false"
        android:textColor="@color/color_text_white"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_vatRate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>