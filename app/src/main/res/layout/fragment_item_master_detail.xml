<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                android:id="@+id/item_name"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/item_type"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/item_status"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/PiC"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/lot_serial_control"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/sales_price"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/buy_price"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/vat_sales_price"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/vat_purchasing_price"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/vat_rate"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/item_category"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/item_brand"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/item_grade"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/item_model"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/item_group_1"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/item_group_2"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/item_group_3"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/item_group_4"
                layout="@layout/item_detail" />

            <include
                android:id="@+id/header_sale_purchasing"
                layout="@layout/item_detail_header"/>
            <include
                android:id="@+id/default_purchase_unit"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/default_sale_unit"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/default_vendor"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/default_currency"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/default_maker"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/country"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/lead_time"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/tax_rate"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/hs_no"
                layout="@layout/item_detail" />

            <include
                android:id="@+id/header_other"
                layout="@layout/item_detail_header"/>
            <include
                android:id="@+id/vendor_warranty_period"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/customer_warranty_period"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/expired_duration"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/keeping_condition"
                layout="@layout/item_detail" />
            <include
                android:id="@+id/header_description"
                layout="@layout/item_detail_header" />
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radius_border"
                android:textSize="16sp"
                android:textColor="@color/color_black"
                android:layout_margin="4dp"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="20dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>