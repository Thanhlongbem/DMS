<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white">

    <LinearLayout
        android:id="@+id/layout_appbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?colorPrimary"
            android:fitsSystemWindows="true"
            android:minHeight="?actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:navigationIcon="@drawable/ic_action_back">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_appbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/color_white"
            >
            <com.ziperp.dms.common.model.EditView
                android:id="@+id/item_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="75dp"
                app:title="@string/str_item_count"
                app:isMandatory="true"
                app:hint="@string/str_select_item"
                />

            <com.ziperp.dms.common.model.EditView
                android:id="@+id/count_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="75dp"
                app:title="@string/str_count_unit"
                app:isMandatory="true"
                app:hint="@string/str_select_count_unit"
                />
            <com.ziperp.dms.common.model.EditView
                android:id="@+id/count_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="75dp"
                app:title="@string/str_count_quantity"
                app:isMandatory="true"
                app:hint="@string/str_enter_quantity_of_item"
                app:isNumberInput="true"
                />

            <include android:id="@+id/warehouse_unit"
                layout="@layout/item_detail"/>
            <com.ziperp.dms.common.model.EditView
                android:id="@+id/lot_serial_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="75dp"
                app:title="@string/str_lot_serial_no"
                app:hint="@string/str_lot_serial_no"
                />
            <com.ziperp.dms.common.model.EditView
                android:id="@+id/make_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="75dp"
                app:title="@string/str_make_date"
                app:hint="@string/str_enter_make_date"
                app:isDateTimePicker="true"
                />
            <com.ziperp.dms.common.model.EditView
                android:id="@+id/expiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="75dp"
                app:title="@string/str_expiry_date"
                app:hint="@string/str_enter_expiry_date"
                app:isDateTimePicker="true"
                />

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_remark"
                android:textSize="16sp"
                android:textColor="@color/color_text_gray"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/bg_radius_border"
                android:hint="@string/str_remark_of_item"
                android:gravity="start"
                android:textSize="16sp"
                android:textColor="@color/color_black"
                android:layout_marginTop="5dp"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="20dp"
                android:imeOptions="actionDone"/>

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/round_corner_rectangle"
                android:backgroundTint="@color/color_red"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_delete"
                android:paddingLeft="20sp"
                android:text="@string/str_delete"
                android:textColor="@color/color_white"
                android:paddingRight="20dp"
                android:elevation="5dp"
                android:shadowColor="@color/color_black"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>