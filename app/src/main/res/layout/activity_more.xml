<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="@drawable/ic_action_back">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </androidx.appcompat.widget.Toolbar>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:orientation="horizontal"
        android:background="#F4F4F4"
        android:layout_marginTop="?actionBarSize"
        android:paddingBottom="7dp"
        android:id="@+id/layout_top_info">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/avata_default"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="@+id/imgAvatar"
            app:layout_constraintBottom_toBottomOf="@+id/imgAvatar"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#47525E"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#47525E"
                android:textSize="18sp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/layoutUserInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_below="@+id/layout_top_info">

        <ImageView
            android:id="@+id/imgUserInformation"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="7dp"
            android:src="@drawable/icon_user_infomation"
            android:tint="@color/colorPrimary"
            android:padding="2dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_user_infomation"
            android:textSize="@dimen/text_title_size"
            android:textColor="@color/color_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/imgUserInformation"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="7dp"
            android:src="@drawable/icon_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="2dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_text_gray"
            android:layout_marginHorizontal="15dp"
            android:layout_below="@id/imgUserInformation"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutChangePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_below="@+id/layoutUserInformation">

        <ImageView
            android:id="@+id/imgChangePass"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="7dp"
            android:src="@drawable/icon_change_pass"
            android:tint="@color/colorPrimary"
            android:padding="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_change_pass"
            android:textSize="@dimen/text_title_size"
            android:textColor="@color/color_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/imgChangePass"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="7dp"
            android:src="@drawable/icon_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="2dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_text_gray"
            android:layout_marginHorizontal="15dp"
            android:layout_below="@id/imgChangePass"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutSyncDataToServer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_below="@+id/layoutChangePass"
        >

        <ImageView
            android:id="@+id/imgSyncDataToServer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="7dp"
            android:src="@drawable/icon_sync_data"
            android:tint="@color/colorPrimary"
            android:padding="2dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_sync_data_to_server"
            android:textSize="@dimen/text_title_size"
            android:textColor="@color/color_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/imgSyncDataToServer"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="7dp"
            android:src="@drawable/icon_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="2dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_text_gray"
            android:layout_marginHorizontal="15dp"
            android:layout_below="@id/imgSyncDataToServer"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutDataNotSync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_below="@+id/layoutSyncDataToServer">

        <ImageView
            android:id="@+id/imgDataNotSync"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="7dp"
            android:src="@drawable/iocn_data_not_sync"
            android:tint="@color/colorPrimary"
            android:padding="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_data_not_synced"
            android:textSize="@dimen/text_title_size"
            android:textColor="@color/color_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/imgDataNotSync"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="7dp"
            android:src="@drawable/icon_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="2dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_text_gray"
            android:layout_marginHorizontal="15dp"
            android:layout_below="@id/imgDataNotSync"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutPresentationManagement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_below="@+id/layoutDataNotSync"
        >

        <ImageView
            android:id="@+id/imgPresentationManagement"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="7dp"
            android:src="@drawable/icon_presentation_management"
            android:tint="@color/colorPrimary"
            android:padding="2dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_presenation_management"
            android:textSize="@dimen/text_title_size"
            android:textColor="@color/color_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/imgPresentationManagement"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="7dp"
            android:src="@drawable/icon_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="2dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_text_gray"
            android:layout_marginHorizontal="15dp"
            android:layout_below="@id/imgPresentationManagement"
            />
    </RelativeLayout>

</RelativeLayout>