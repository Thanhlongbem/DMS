<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="@drawable/ic_action_back">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nest_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_parent_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include
                    android:id="@+id/item_parent_header"
                    layout="@layout/item_detail_header"/>
                <com.ziperp.dms.common.model.EditView
                    android:id="@+id/item_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="75dp"
                    app:title="@string/str_item_parent"
                    app:isMandatory="true"
                    app:hint="@string/str_select_item_parent"
                    />
                <com.ziperp.dms.common.model.EditView
                    android:id="@+id/accessory_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="75dp"
                    app:title="@string/str_accessory_version"
                    app:hint="@string/str_select_version"
                    />
                <include
                    android:id="@+id/item_accessory_header"
                    layout="@layout/item_detail_header"/>
            </LinearLayout>
            <com.ziperp.dms.common.model.EditView
                android:id="@+id/item_accessory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="75dp"
                app:title="@string/str_item_accessory"
                app:isMandatory="true"
                app:hint="@string/str_select_item_accessory"
                />
            <com.ziperp.dms.common.model.EditView
                android:id="@+id/accessory_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="75dp"
                app:title="@string/str_accessory_unit"
                app:isMandatory="true"
                app:hint="@string/str_select_accessory_unit"
                />
            <com.ziperp.dms.common.model.EditView
                android:id="@+id/quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="75dp"
                app:title="@string/str_quantity"
                app:isMandatory="true"
                app:hint="@string/str_enter_quantity_of_item"
                app:isNumberInput="true"
                />
            <include
                android:id="@+id/quantity_wu"
                layout="@layout/item_detail"/>
            <com.ziperp.dms.common.model.EditView
                android:id="@+id/warehouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="75dp"
                app:title="@string/str_warehouse"
                app:isMandatory="true"
                app:hint="@string/str_select_warehouse"
                />
            <include
                android:id="@+id/available_stock"
                layout="@layout/item_detail"/>

            <TextView
                android:id="@+id/tv_content_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:text="@string/str_note_content"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_title_size"/>
            <EditText
                android:id="@+id/tv_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:gravity="start"
                android:background="@drawable/bg_radius_border"
                android:textSize="@dimen/text_title_size"
                android:textColor="@color/color_black"
                android:layout_margin="4dp"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="20dp"
                android:imeOptions="actionDone"/>

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/round_corner_rectangle"
                android:backgroundTint="@color/color_red"
                android:layout_marginBottom="15dp"
                android:drawableLeft="@drawable/ic_delete"
                android:paddingLeft="20sp"
                android:text="@string/str_delete"
                android:textColor="@color/color_white"
                android:paddingRight="20dp"
                android:elevation="5dp"
                android:shadowColor="@color/color_black"
                android:visibility="gone"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>