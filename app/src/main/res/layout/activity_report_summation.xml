<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="@drawable/ic_action_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_0.25"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_0.5"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_0.75"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"/>

        <LinearLayout
            android:id="@+id/layout_customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_visit_customer"
                android:backgroundTint="@color/color_confirm"
                android:padding="1dp" />

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_black"
                android:textStyle="bold"
                android:textSize="@dimen/text_standard_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_begin"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_sub_info_size"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/layout_customer_name"
            app:layout_constraintStart_toStartOf="@id/line_0.25"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_in_period"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_sub_info_size"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/layout_customer_name"
            app:layout_constraintStart_toStartOf="@id/line_0.5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_end"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_sub_info_size"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/layout_customer_name"
            app:layout_constraintStart_toStartOf="@id/line_0.75"/>

        <TextView
            android:id="@+id/tv_visit_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_visit_times"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_sub_info_size"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_begin"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tv_sales_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_sales_order"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_sub_info_size"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_visit_times"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tv_total_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_total_quantity"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_sub_info_size"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_sales_order"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tv_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_total_amount"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_sub_info_size"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_total_qty"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tv_uncollected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_uncollected"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_sub_info_size"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_total_amount"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_visit_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_sub_info_size"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_visit_times"
            app:layout_constraintBottom_toBottomOf="@id/tv_visit_times"
            app:layout_constraintStart_toStartOf="@id/line_0.25"/>
        <TextView
            android:id="@+id/tv_visit_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_sub_info_size"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_visit_times"
            app:layout_constraintBottom_toBottomOf="@id/tv_visit_times"
            app:layout_constraintStart_toStartOf="@id/line_0.5"/>
        <TextView
            android:id="@+id/tv_visit_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_sub_info_size"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_visit_times"
            app:layout_constraintBottom_toBottomOf="@id/tv_visit_times"
            app:layout_constraintStart_toStartOf="@id/line_0.75"/>

        <TextView
            android:id="@+id/tv_sales_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_sub_info_size"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_sales_order"
            app:layout_constraintBottom_toBottomOf="@id/tv_sales_order"
            app:layout_constraintStart_toStartOf="@id/line_0.25"/>
        <TextView
            android:id="@+id/tv_sales_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_sub_info_size"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_sales_order"
            app:layout_constraintBottom_toBottomOf="@id/tv_sales_order"
            app:layout_constraintStart_toStartOf="@id/line_0.5"/>
        <TextView
            android:id="@+id/tv_sales_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_sub_info_size"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_sales_order"
            app:layout_constraintBottom_toBottomOf="@id/tv_sales_order"
            app:layout_constraintStart_toStartOf="@id/line_0.75"/>

        <TextView
            android:id="@+id/tv_quantity_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_sub_info_size"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_total_qty"
            app:layout_constraintBottom_toBottomOf="@id/tv_total_qty"
            app:layout_constraintStart_toStartOf="@id/line_0.25"/>
        <TextView
            android:id="@+id/tv_quantity_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_sub_info_size"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_total_qty"
            app:layout_constraintBottom_toBottomOf="@id/tv_total_qty"
            app:layout_constraintStart_toStartOf="@id/line_0.5"/>
        <TextView
            android:id="@+id/tv_quantity_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_sub_info_size"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_total_qty"
            app:layout_constraintBottom_toBottomOf="@id/tv_total_qty"
            app:layout_constraintStart_toStartOf="@id/line_0.75"/>

        <TextView
            android:id="@+id/tv_amount_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_sub_info_size"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_total_amount"
            app:layout_constraintBottom_toBottomOf="@id/tv_total_amount"
            app:layout_constraintStart_toStartOf="@id/line_0.25"/>
        <TextView
            android:id="@+id/tv_amount_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_sub_info_size"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_total_amount"
            app:layout_constraintBottom_toBottomOf="@id/tv_total_amount"
            app:layout_constraintStart_toStartOf="@id/line_0.5"/>
        <TextView
            android:id="@+id/tv_amount_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_sub_info_size"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_total_amount"
            app:layout_constraintBottom_toBottomOf="@id/tv_total_amount"
            app:layout_constraintStart_toStartOf="@id/line_0.75"/>

        <TextView
            android:id="@+id/tv_uncollected_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_red"
            android:textSize="@dimen/text_sub_info_size"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_uncollected"
            app:layout_constraintBottom_toBottomOf="@id/tv_uncollected"
            app:layout_constraintStart_toStartOf="@id/line_0.25"/>
        <TextView
            android:id="@+id/tv_uncollected_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_red"
            android:textSize="@dimen/text_sub_info_size"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_uncollected"
            app:layout_constraintBottom_toBottomOf="@id/tv_uncollected"
            app:layout_constraintStart_toStartOf="@id/line_0.5"/>
        <TextView
            android:id="@+id/tv_uncollected_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_red"
            android:textSize="@dimen/text_sub_info_size"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_uncollected"
            app:layout_constraintBottom_toBottomOf="@id/tv_uncollected"
            app:layout_constraintStart_toStartOf="@id/line_0.75"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/color_white"
        app:tabIndicatorHeight="3dp"
        app:tabSelectedTextColor="@color/colorPrimaryDark"
        app:tabTextAppearance="@style/TabTextAppearance"
        app:layout_constraintTop_toBottomOf="@id/layout_summary"
        android:layout_marginTop="3dp"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>