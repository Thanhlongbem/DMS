<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginBottom="4dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@drawable/bg_white_radius"
        android:paddingStart="5dp"
        android:paddingTop="8dp"
        android:paddingEnd="5dp"
        android:paddingBottom="8dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_ver_parent_0.2"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_ver_parent_0.5"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line_ver_parent_0.7"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />

        <TextView
            android:id="@+id/tv_StockCountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANTS - Doppelherz Aktiv Anti Stress"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_title_size"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_count_unit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/str_count_unit_normal"
            android:textColor="@color/color_grey"
            android:textSize="@dimen/text_standard_size"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_StockCountName"
            app:layout_constraintEnd_toStartOf="@id/line_ver_parent_0.2"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_count_unit_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="N/A"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_standard_size"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_StockCountName"
            app:layout_constraintStart_toStartOf="@id/line_ver_parent_0.2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/str_stocks_unit"
            android:textColor="@color/color_grey"
            android:textSize="@dimen/text_standard_size"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_StockCountName"
            app:layout_constraintStart_toEndOf="@id/line_ver_parent_0.5"/>

        <TextView
            android:id="@+id/tv_stockUnitValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="N/A"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_standard_size"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_StockCountName"
            app:layout_constraintStart_toStartOf="@id/line_ver_parent_0.7"/>

        <TextView
            android:id="@+id/tv_lot_serial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_lot_serial"
            android:textColor="@color/color_grey"
            android:textSize="@dimen/text_standard_size"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_count_unit"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_lot_serial_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_standard_size"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_count_unit_value"
            app:layout_constraintStart_toStartOf="@id/line_ver_parent_0.2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/str_mfg_date"
            android:textColor="@color/color_grey"
            android:textSize="@dimen/text_standard_size"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_lot_serial"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_mfgDateValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="N/A"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_standard_size"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_lot_serial_value"
            app:layout_constraintStart_toStartOf="@id/line_ver_parent_0.2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/str_exp_date"
            android:textColor="@color/color_grey"
            android:textSize="@dimen/text_standard_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/line_ver_parent_0.5"/>

        <TextView
            android:id="@+id/tv_expDateValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="N/A"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_standard_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/line_ver_parent_0.7"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
<FrameLayout
    android:layout_width="1000dp"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_red">

        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/str_delete"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="center" />
    </FrameLayout>
</FrameLayout>
</LinearLayout>