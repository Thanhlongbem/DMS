<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_bg_white"
    android:layout_marginBottom="4dp"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/layout_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle"
            android:src="@drawable/avata_default"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/tv_staff_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_title_size"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            android:layout_toRightOf="@id/img_avatar"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_general"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="4dp"
        android:background="#B437ACE5"
        android:orientation="horizontal"
        android:padding="3dp"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_sub_info_size"
            android:textStyle="bold"
            android:text="Sales Item"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_sub_info_size"
            android:textStyle="bold"
            android:text="@string/str_quantity"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_sub_info_size"
            android:textStyle="bold"
            android:gravity="end"
            android:text="@string/str_total_amount"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_header"
        android:layout_marginHorizontal="7dp"
        android:scrollbars="vertical"/>
    <LinearLayout
        android:id="@+id/layout_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycler_view"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="4dp"
        android:background="#816E6E6E"
        android:orientation="horizontal"
        android:padding="3dp"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_sub_info_size"
            android:text="Total"/>
        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_sub_info_size"/>
        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_sub_info_size"
            android:gravity="end"/>
    </LinearLayout>

</RelativeLayout>