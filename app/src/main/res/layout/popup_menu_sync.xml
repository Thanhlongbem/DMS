<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_triangle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/white_triangle"
        android:tint="@color/color_white"
        android:layout_toEndOf="@id/layout_menu"
        android:layout_marginLeft="-35dp"
        android:layout_marginBottom="-11dp"
        />

    <LinearLayout
        android:id="@+id/layout_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/img_triangle"
        android:background="@color/color_white"
        >
        <LinearLayout
            android:id="@+id/layout_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_sync_blue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="Sync data to server"
                android:textColor="@color/color_text_gray"
                android:textSize="@dimen/text_standard_size"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/color_grey"/>
        <LinearLayout
            android:id="@+id/layout_not_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_sync"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_database"
                android:tint="@color/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="Data not synced"
                android:textColor="@color/color_text_gray"
                android:textSize="@dimen/text_standard_size"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>